<div id="login">
  <div>SIGN UP </div>
  <form action="/signup" method="POST">

  	<% if @user %>
    <% @user.errors.full_messages.each do |message| %>
    <p><%= message %></p>
    <% end %>
    <% end %>

    <input type="text" name="user[name]" placeholder="name" value="<%= params[:name]%>">
    <input type="text" name="user[username]" placeholder="username" value="<%= params[:username]%>">
    <input type="text" name="user[email]" placeholder="email">
    <input type="password" name="user[password]"placeholder="password">
     <input type="password" name="user[password_confirmation]" placeholder="password confirmation">
    <input type="submit" value="SIGN UP">
  </form>
</div>


